<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<fx:root type="StackPane" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <BorderPane prefHeight="450.0" prefWidth="800.0">
         <center>
            <JFXTreeTableView fx:id="elementsTable" prefHeight="200.0" prefWidth="200.0">
              <columns>
                  <JFXTreeTableColumn fx:id="displayNameColumn" prefWidth="100.0" text="表示名" />
                  <JFXTreeTableColumn fx:id="pathColumn" prefWidth="400.0" text="パス" />
                  <JFXTreeTableColumn fx:id="doneColumn" prefWidth="50.0" sortable="false" text="進捗" />
                  <JFXTreeTableColumn fx:id="resultColumn" prefWidth="100.0" sortable="false" text="出力結果" />
              </columns>
            </JFXTreeTableView>
         </center>
         <right>
            <VBox BorderPane.alignment="CENTER">
               <children>
                  <HBox>
                     <children>
                        <JFXButton fx:id="upButton" buttonType="RAISED" maxHeight="1.7976931348623157E308" mnemonicParsing="false">
                           <graphic>
                              <Text strokeType="OUTSIDE" strokeWidth="0.0" text="↑">
                                 <font>
                                    <Font name="Monospaced Regular" size="12.0" />
                                 </font>
                              </Text>
                           </graphic>
                        </JFXButton>
                        <JFXButton fx:id="downButton" buttonType="RAISED" maxHeight="1.7976931348623157E308" mnemonicParsing="false">
                           <graphic>
                              <Text strokeType="OUTSIDE" strokeWidth="0.0" text="↓">
                                 <font>
                                    <Font name="Monospaced Regular" size="12.0" />
                                 </font>
                              </Text>
                           </graphic>
                        </JFXButton>
                        <JFXButton fx:id="addButton" buttonType="RAISED" maxHeight="1.7976931348623157E308" mnemonicParsing="false">
                           <graphic>
                              <Text strokeType="OUTSIDE" strokeWidth="0.0" text="+">
                                 <font>
                                    <Font name="Monospaced Regular" size="12.0" />
                                 </font>
                              </Text>
                           </graphic>
                        </JFXButton>
                        <JFXButton fx:id="removeButton" buttonType="RAISED" maxHeight="1.7976931348623157E308" mnemonicParsing="false">
                           <graphic>
                              <Text strokeType="OUTSIDE" strokeWidth="0.0" text="-">
                                 <font>
                                    <Font name="Monospaced Regular" size="12.0" />
                                 </font>
                              </Text>
                           </graphic>
                        </JFXButton>
                     </children>
                     <padding>
                        <Insets bottom="2.0" />
                     </padding>
                  </HBox>
                  <GridPane hgap="1.0" vgap="1.0">
                    <columnConstraints>
                      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                      <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" prefWidth="80.0" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                      <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                      <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                     <children>
                        <Label text="背景色" />
                        <Label text="幅" GridPane.rowIndex="1" />
                        <Label text="高さ" GridPane.rowIndex="2" />
                        <JFXTextField fx:id="widthField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                        <JFXTextField fx:id="heightField" GridPane.columnIndex="1" GridPane.rowIndex="2" />
<!--                        <JFXNodesList fx:id="pdfSizeMenuButton" text="出力サイズ設定" GridPane.columnSpan="2147483647" GridPane.rowIndex="3">-->
<!--                          <items>-->
<!--                              <MenuItem fx:id="clearSizeMenuItem" mnemonicParsing="false" text="クリア" />-->
<!--                            <MenuItem fx:id="a4VerticalMenuItem" mnemonicParsing="false" text="A4 （縦）" />-->
<!--                            <MenuItem fx:id="a4HorizontalMenuItem" mnemonicParsing="false" text="A4 （横）" />-->
<!--                          </items>-->
<!--                        </JFXNodesList>-->
                         <JFXNodesList fx:id="pdfSizeMenuButton" rotate="180.0" spacing="15" GridPane.rowIndex="3" StackPane.alignment="BOTTOM_RIGHT">
                             <children>
                                 <JFXButton fx:id="clearSizeMenuItem" contentDisplay="GRAPHIC_ONLY" styleClass="main-button">
                                     <graphic>
                                         <Text strokeType="OUTSIDE" strokeWidth="0.0" text="+">
                                             <font>
                                                 <Font name="Monospaced Regular" size="12.0" />
                                             </font>
                                         </Text>
                                     </graphic>
                                 </JFXButton>
                                 <JFXButton fx:id="a4VerticalMenuItem" contentDisplay="GRAPHIC_ONLY" styleClass="animated-option-button">
                                     <graphic>
                                         <Text strokeType="OUTSIDE" strokeWidth="0.0" text="+">
                                             <font>
                                                 <Font name="Monospaced Regular" size="12.0" />
                                             </font>
                                         </Text>
                                     </graphic>
                                 </JFXButton>
                                 <JFXButton fx:id="a4HorizontalMenuItem" contentDisplay="GRAPHIC_ONLY" styleClass="animated-option-button">
                                     <graphic>
                                         <Text strokeType="OUTSIDE" strokeWidth="0.0" text="+">
                                             <font>
                                                 <Font name="Monospaced Regular" size="12.0" />
                                             </font>
                                         </Text>
                                     </graphic>
                                 </JFXButton>
                             </children>
                             <StackPane.margin>
                                 <Insets bottom="50.0" right="50.0" />
                             </StackPane.margin>
                         </JFXNodesList>
                        <JFXColorPicker fx:id="colorPicker" promptText="背景色" GridPane.columnIndex="1" />
                     </children>
                     <padding>
                        <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
                     </padding>
                  </GridPane>
                  <Label alignment="TOP_LEFT" maxHeight="1.7976931348623157E308" prefWidth="150.0" text="上部のボタンコントロールはPDFに追加する項目に関するボタンです。&#10;&#10;幅、高さを指定するとその大きさでPDFファイルが生成されます。&#10;指定しないときは一枚目の画像の大きさになります。" wrapText="true" VBox.vgrow="ALWAYS">
                     <padding>
                        <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
                     </padding>
                  </Label>
                  <StackPane>
                     <children>
                        <JFXSpinner fx:id="progress" />
                     </children>
                  </StackPane>
               </children>
            </VBox>
         </right>
         <bottom>
            <HBox spacing="8.0">
               <children>
                  <HBox HBox.hgrow="ALWAYS">
                     <children>
                        <JFXTextField fx:id="savePathField" promptText="出力ファイルパス" HBox.hgrow="ALWAYS" />
                        <JFXButton fx:id="browseButton" mnemonicParsing="false" text="参照" />
                     </children>
                  </HBox>
                  <JFXButton fx:id="launchButton" mnemonicParsing="false" prefWidth="112.0" text="開始" />
               </children>
               <padding>
                  <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
               </padding>
            </HBox>
         </bottom>
      </BorderPane>
   </children>
</fx:root>
